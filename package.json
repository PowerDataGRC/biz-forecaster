{
  "name": "biz-forecaster",
  "private": true,
  "workspaces": [
    "biz-forecaster-frontend",
    "biz-forecaster-api"
  ],
  "scripts": {
    "dev:frontend": "cd biz-forecaster-frontend && npm run dev",
    "dev:api": "cd biz-forecaster-api && npm run start:dev",
    "build": "npm run build --workspaces",
    "build:frontend": "cd biz-forecaster-frontend && npm run build",
    "build:api": "cd biz-forecaster-api && npm run build",
    "build:all": "npm run build --workspace=biz-forecaster-frontend && npm run build --workspace=biz-forecaster-api",
    "lint": "eslint ."
  },
  "dependencies": {
    "@eslint/config-array": "^0.21.1",
    "@heroicons/react": "^2.2.0",
    "@mui/icons-material": "^7.3.5",
    "firebase": "^12.5.0",
    "nodemailer": "^7.0.10"
  },
  "devDependencies": {
    "rimraf": "^6.1.0",
    "test-exclude": "^7.0.1",
    "typescript-eslint": "^8.46.3",
    "eslint": "^8.56.0",
    "typescript": "^5.2.2",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint-config-next": "^14.2.4",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-import": "^2.28.1"
  },
  "overrides": {
    "eslint": "^8.56.0",
    "glob": "^10.4.2",
    "rimraf": "^6.1.0",
    "@humanwhocodes/config-array": "npm:@eslint/config-array@0.21.1",
    "@humanwhocodes/object-schema": "npm:@eslint/object-schema@3.0.0"
  }
}